# Database Configuration
POSTGRES_USER=dte_user
POSTGRES_PASSWORD=dte_password
POSTGRES_DB=dte_platform
DATABASE_URL=postgresql://dte_user:dte_password@localhost:5432/dte_platform

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379

# RabbitMQ Configuration
RABBITMQ_USER=dte_user
RABBITMQ_PASSWORD=dte_password
RABBITMQ_URL=amqp://dte_user:dte_password@localhost:5672//

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Celery Configuration
CELERY_BROKER_URL=amqp://dte_user:dte_password@localhost:5672//
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Scraping Configuration
DEFAULT_TIMEOUT=60
MAX_RETRIES=5
DEFAULT_USER_AGENT=Mozilla/5.0 (compatible; DTE-Platform/1.0)

# Rate Limiting
DEFAULT_RATE_LIMIT_PER_MINUTE=60
DEFAULT_RATE_LIMIT_PER_HOUR=1000

# Proxy Configuration (optional)
PROXY_LIST=
PROXY_ROTATION_ENABLED=false

# Logging
LOG_LEVEL=INFO

